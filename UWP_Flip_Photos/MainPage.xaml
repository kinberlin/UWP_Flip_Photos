<Page
    x:Class="UWP_Flip_Photos.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_Flip_Photos"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:my="using:UWP_Flip_Photos.Controls">

    <Page.Resources>
        <DataTemplate x:Key="CustomItemTemplate">
        <Border CornerRadius="5"
                Background="Orange"
                HorizontalAlignment="Center"
                Padding="5"
                Margin="3" />
    </DataTemplate>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height ="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <FlipView x:Name="flipView">
            <FlipView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Image Stretch="Uniform" Source="{Binding ImagePath}" />
                        <Border Background="#A5000000"
                                Height="80"
                                VerticalAlignment="Bottom"/>
                        <TextBlock VerticalAlignment="Bottom"
                                   Text="{Binding ImageName}"
                                   FontFamily="Segoe UI"
                                   FontSize="26"
                                   Foreground="#CCFFFFFF"
                                   Padding="15,20"/>
                    </Grid>
                </DataTemplate>
            </FlipView.ItemTemplate>
        </FlipView>
        <my:FlipViewIndicator 
            FlipView="{Binding ElementName=flipView}"
            ItemTemplate="{StaticResource CustomItemTemplate}"
            HorizontalContentAlignment="Left"
            HorizontalAlignment="Left"
            Grid.Row="1"
            Margin="8">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </my:FlipViewIndicator>
    </Grid>
</Page>
